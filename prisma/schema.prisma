generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Answer {
  id        Int      @id
  text      String
  isCorrect Boolean
  domandaId Int
  domanda   Question @relation(fields: [domandaId], references: [id])
}

model Question {
  id       Int      @id
  question String
  subject  String
  number   Int
  answers  Answer[]
}
